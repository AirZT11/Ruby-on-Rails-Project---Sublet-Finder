<h2>Login</h2>

<div class="error"><%= flash.notice %></div>

<div>Please login to your account to create & edit listings</div>

<%= form_tag '/login' do %>
  <%= label :username, 'Username' %>
  <%= text_field_tag :username %><br>
  <%= label :password, 'Password' %>
  <%= password_field_tag :password %>
  <%= submit_tag 'Login' %>
<% end %>