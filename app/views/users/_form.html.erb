<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@user.errors.count, "error") %>
      prohibited this user from being saved:
    </h2>
 
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@user) do |f| %>
  Name: <%= f.text_field :first_name, placeholder: 'first name'%><%= f.text_field :last_name, placeholder: 'last name' %><br />

  Username: <%= f.text_field :username %><br />
  Password: <%= f.password_field :password %><br />
  Password Confirmation: <%= f.password_field :password_confirmation %><br />

  Email: <%= f.text_field :email %><br />
  Phone Number: <%= f.text_field :phone_number %><br />
  Age: <%= f.text_field :age %><br />
  Occupation: <%= f.text_field :occupation %><br />
  Bio: <%= f.text_field :bio , placeholder: 'Write a little about yourself!'%><br />

  Social Media: <%= f.text_field :social_media %><br />
  
  <%= f.submit 'Submit'%>
<% end %>